<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Город: Уфа"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"         />

    <TextView
        android:id="@+id/tempC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Температура: 0"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityName" />
    <TextView
        android:id="@+id/Clouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Облачность: Ясно"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempC" />
    <TextView
        android:id="@+id/Rainfall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Осадки: Небольшой дождь"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/Clouds"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
